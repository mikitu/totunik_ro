{
  "collectionName": "components_jotun_product_categories_items",
  "info": {
    "displayName": "Product Category",
    "description": "Individual product category with features"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "icon": {
      "type": "enumeration",
      "enum": [
        "interior",
        "exterior", 
        "protective",
        "wood-metal",
        "industrial",
        "marine",
        "automotive",
        "decorative"
      ],
      "required": true
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "blue",
        "green", 
        "orange",
        "purple",
        "red",
        "gray",
        "teal",
        "indigo"
      ],
      "required": true,
      "default": "blue"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "shared.feature",
      "required": true,
      "min": 1,
      "max": 6
    },
    "ctaButton": {
      "type": "component",
      "repeatable": false,
      "component": "shared.button"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
